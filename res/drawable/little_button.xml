<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
  <item android:state_pressed="true" >
    <shape>
        <gradient
          android:startColor="#64000000" 
          android:endColor="#F06A5ACD"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#767676" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
  <item>
    <shape>
      <solid
          android:background="@android:color/transparent"/>
      <stroke
          android:width="2dp"
          android:color="#60ffffff" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  
</selector>